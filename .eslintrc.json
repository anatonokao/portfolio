{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
//        "standard-with-typescript",
//        "plugin:react/recommended",
        "airbnb",
        "airbnb-typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "requireConfigFile": false,
        "project": "./tsconfig.json"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/function-component-definition": [
            2,
            { "namedComponents": "arrow-function" }
        ]
    }
}
